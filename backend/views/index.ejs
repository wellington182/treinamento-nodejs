<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <style>
      #errors {
        display: none;
        /* background-color: rgba(83, 83, 83, 0.3);
        color: #fff; */
        padding: 10px;
        margin: 10px 0px;
        border-radius: 13px;
      }
  </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
          <a id="title" class="navbar-brand" href="#">
            <h1><%= title %></h1>          
          </a>
      </div>        
    </nav>

    <main>
      <div class="container-fluid">
        <form action="/cadastrar" method="POST" id="form">
          <div class="form-inline">
              <div class="form-group">
                  <input type="text" name="id" id="id" class="form-control" placeholder="ID">
              </div>
              <div class="form-group">
                  <input type="text" name="desc" id="desc" class="form-control" placeholder="Description">
              </div>
              <div class="form-group">
                  <input type="text" name="amount" id="amount" class="form-control" placeholder="Amount">
              </div>
              <div class="form-group">
                  <input type="text" name="price" id="price" class="form-control" placeholder="Price">
              </div>
              <button class="btn btn-default" id="btnAdd">Add</button>
          </div>
        </form>
          
        <div id="errors" class="alert alert-danger">
        </div>
            
        <form action="/pesquisar" method="GET" id="form">
          <div class="form-inline">
            <div class="form-group">
              <input type="text" name="desc" id="desc" class="form-control" placeholder="Description">
            </div>
            
            <button class="btn btn-default" id="btnSearch">Search</button>              
          </div>  
        </form>
          
        <table class="table" id="tabela">

              <% if (products.length > 0) { %>
                    <tr>
                      <th scope="col">Description</th>
                      <th scope="col">Amount</th>
                      <th scope="col">Price</th>
                    </tr>
              <% } %>

              <% for (var i = 0; i < products.length; i++) { %>
                  <tr>
                    <td><%= products[i].description %></td>
                    <td><%= products[i].amount %></td>
                    <td><%= products[i].price %></td>
                    <td><a href="alterar?id=<%= products[i].id %>">Editar</a> | <a href="excluir?id=<%= products[i].id %>">Excluir</a></td>
                  </tr>
              <% } %>
          </table>    
      </div>        
    </main>
    
    <script src="/javascripts/config.js"></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
