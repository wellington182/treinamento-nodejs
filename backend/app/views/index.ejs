<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <style>
      #errors {
        display: none;
        /* background-color: rgba(83, 83, 83, 0.3);
        color: #fff; */
        padding: 10px;
        margin: 10px 0px;
        border-radius: 13px;
      }
  </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
          <a id="title" class="navbar-brand" href="#">
            <h1><%= title %></h1>          
          </a>
      </div>        
    </nav>

    <main>
      <div class="container-fluid">
        <fieldset class="forms">
          <legend>Cadastrar Produto</legend>

          <form action="/cadastrar" method="POST" id="form">
            <div class="form-inline">
                <div class="form-group">
                    <input type="text" name="id" id="id" class="form-control" placeholder="ID">
                </div>
                <div class="form-group">
                    <input type="text" name="desc" id="desc" class="form-control" placeholder="Description">
                </div>
                <div class="form-group">
                    <input type="text" name="amount" id="amount" class="form-control" placeholder="Amount">
                </div>
                <div class="form-group">
                    <input type="text" name="price" id="price" class="form-control" placeholder="Price">
                </div>
                <div class="form-group">
                  <button class="btn btn-success" id="btnAdd">Adicionar</button>
                </div>
            </div>
          </form>
        </fieldset>
          
        <div id="errors" class="alert alert-danger">
        </div>
        
        <fieldset class="forms">
          <legend>Buscar</legend>

          <form action="/pesquisar" method="GET" id="form">
            <div class="form-inline">
              <div class="form-group">
                <input type="text" name="desc" id="desc" class="form-control" placeholder="Description">
              </div>
              
              <button class="btn btn-primary" id="btnSearch">Search</button>              
            </div>  
          </form>
        </fieldset>

        <input type="button" value="Carregar Estados" class="btn btn-primary" id="btnCarregarEstados">
        <p>
          <label for="estados">Estados:</label>
          <select name="estados" id="estados" class="form-control">
          </select>
        </p>

        <p>
          <label for="cidades">Cidades:</label>
          <select name="cidades" id="cidades" class="form-control">
          </select>
        </p>
         
        <div class="tabela">
          <table class="table table-striped table-hover" id="tabela">
  
                <% if (products.length > 0) { %>
                  <thead>
                    <tr>
                      <th scope="col">Description</th>
                      <th scope="col">Amount</th>
                      <th scope="col">Price</th>
                    </tr>
                  </thead>
                <% } %>
  
                <% for (var i = 0; i < products.length; i++) { %>
                    <tr>
                      <td><%= products[i].description %></td>
                      <td><%= products[i].amount %></td>
                      <td><%= products[i].price %></td>
                      <td><a href="alterar?id=<%= products[i].id %>" class="btn btn-warning">Editar</a> <a href="excluir?id=<%= products[i].id %>" class="btn btn-danger">Excluir</a></td>
                    </tr>
                <% } %>
            </table> 
        </div>
      </div>        
    </main>
    
    <script src="/javascripts/jquery-1.11.0.min.js"></script>
    <script src="/javascripts/config.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/ajax.js"></script>
  </body>
</html>
